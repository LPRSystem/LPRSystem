@model LPRSystem.Web.UI.Models.PaymentMethod
@{
    ViewData["Title"] = "PaymentMethod";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Edit", "PaymentMethod", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)

    <div class="form-group">
        <label for="Name">Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Enter email" })
    </div>
    <div class="form-group">
        <label for="Code">Code</label>
        @Html.TextBoxFor(x => x.Code, new { @class = "form-control", @placeholder = "Enter Code" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}