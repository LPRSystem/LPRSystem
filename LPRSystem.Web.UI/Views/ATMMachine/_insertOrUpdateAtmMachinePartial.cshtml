<form id="AddEditATMMachineForm">
    <div class="sidebar" id="sidebar">
        <div class="modal-header">
            <h5 class="modal-title">Add/Edit ATM</h5>
            <button type="button" class="close" id="closeSidebar" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label for="LocationId">Location</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                    </div>
                    <select class="form-control" id="LocationId" required autofocus>
                        <option value="" disabled selected>Select a code</option>
                        <option value="code1">Code 1</option>
                        <option value="code2">Code 2</option>
                        <option value="code3">Code 3</option>
                        <option value="code4">Code 4</option>
                        <option value="code5">Code 5</option>
                        <option value="code6">Code 6</option>
                        <option value="code7">Code 7</option>
                        <option value="code8">Code 8</option>
                        <option value="code9">Code 9</option>
                        <option value="code10">Code 10</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="ATMCode">ATM Code</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                    </div>
                    <input type="text" class="form-control" id="ATMCode" placeholder="Enter first name" autofocus required>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" id="btnsubmit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
