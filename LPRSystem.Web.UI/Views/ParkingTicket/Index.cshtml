@{
    ViewData["Title"] = "ParkingTicket";
    Layout = "~/Views/Shared/_ATMLayout.cshtml";
}
<form id="formParkingTicket" class="mb-3">
    <div class="card borderless">
        <div class="row align-items-center ">
            <div class="col-md-12">
                <div class="card-body">
                    <h4 class="mb-3 f-w-400">Get your Parking ticket</h4>
                    <hr />
                    <div class="form-group mb-4">
                        <label for="carnumber" class="form-label text-left" style="float: left">Car/Vehicle Number</label>
                        <div class="input-group">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fa fa-car"></i></span>
                            </div>
                            <input type="text" class="form-control" id="carnumber" name="carnumber" placeholder="enter car/ vehicle number" autofocus required />
                        </div>
                    </div>
                    <div class="form-group mb-4">
                        <label for="phonenumber" class="form-label text-left" style="float: left">Phone Number</label>
                        <div class="input-group">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fa fa-phone"></i></span>
                            </div>
                            <input type="text" class="form-control" id="phonenumber" name="phonenumber" placeholder="enter phone number" autofocus required />
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label for="duration" class="form-label text-left" style="float: left">Duration</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-flag"></i></span>
                            </div>
                            <select class="form-control" id="duration" required autofocus>
                            </select>
                        </div>
                    </div>

                    <button class="btn btn-block btn-primary mb-4" type="submit" id="btnSubmit">Get ticket</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/ParkingTicketController.js"></script>
<script type="text/javascript">
    $(function () {
        var ctrl = new ParkingTicketController();
        ctrl.init();
    });
</script>