@model LPRSystem.Web.UI.Models.ParkingSlotViewModel

@{
    ViewData["Title"] = "Parking Slots";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("Create", "ParkingSlot", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="ParkingPlaceId">Parking Place</label>
                        @Html.DropDownListFor(x => x.ParkingPlaceId,
                                 new SelectList(Model.parkingPlaces, "ParkingPlaceId", "ParkingPlaceName"),
                                 "–Select Place–",
                                 new { @class = "form-control", @id = "ParkingPlaceId" })
                    </div>
                    <div class="form-group">
                        <label for="ATMId">ATM</label>
                        @Html.DropDownListFor(x => x.ATMId,
                                 new SelectList(Model.atmMachines, "ATMId", "ATMCode"),
                                 "–Select ATM–",
                                 new { @class = "form-control", @id = "ATMId" })
                    </div>
                    <div class="form-group">
                        <label for="ParkingSlotCode">Parking Slot Code</label>
                        @Html.TextBoxFor(x => x.ParkingSlotCode, new { @class = "form-control", @id = "ParkingSlotCode", placeholder = "Enter Slot Code" })
                    </div>
                    <button type="submit" class="btn btn-primary">Create</button>
                }
            </div>
        </div>
    </div>
</div>
